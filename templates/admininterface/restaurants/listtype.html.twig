{% extends 'basetable.html.twig'%}

{% block title %}
Types de restaurants
{% endblock %}

{% block tablecontainer %}
    <caption>Liste des types de restaurant</caption>
    <thead>
        <tr>
            <th scope="col">Libell√©</th>
            <th scope="col">Supprimer</th>
        </tr>
    </thead>
    <tbody>
        {% for type in types %}
            <tr>
                <th scope="row">{{ type.libelle }}<th>
                <td><a class="btn btn-danger btn-sm" href="{{ path('suppr_type_restaurant',{'slug': type.id }) }}">Suppr</a></td>
            </tr>
        {% endfor %}
    </tbody>
{% endblock %}

{% block manage %}
