{% extends 'basetable.html.twig'%}

{% block title %}
Types d'attractions
{% endblock %}

{% block tablecontainer %}
    <caption>Liste des types d'attraction</caption>
    <thead>
        <tr>
            <th scope="col">Libell√©</th>
            <th scope="col">Supprimer</th>
        </tr>
    </thead>
    <tbody>
        {% for type in types %}
            <tr>
                <th scope="row">{{ type.libelle }}<th>
                <td><a class="btn btn-danger btn-sm" href="{{ path('suppr_type_attraction',{'slug': type.id }) }}">Suppr</a></td>
            </tr>
        {% endfor %}
    </tbody>
{% endblock %}

{% block manage %}
    <a class="btn btn-primary btn-md" href="{{ path('nouv_type_attraction') }}">Ajouter</a>
    <a class="btn btn-primary btn-md" href="{{ path('liste_attractions') }}">Retour aux attractions</a>
{% endblock %}
