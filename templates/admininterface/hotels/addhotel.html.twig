{% extends 'baseform.html.twig'%}

{% block title %}
Ajouter hôtel
{% endblock %}

{% block h1 %}Ajouter hôtel{% endblock %}

{% block form %}

    {{ form_start(form) }}
        {{ form_errors(form) }}
        <div>
            {{ form_label(form.libelle) }}
            {{ form_errors(form.libelle) }}
            {{ form_widget(form.libelle) }}
        </div>

        <div>
            {{ form_label(form.type) }}
            {{ form_errors(form.type) }}
            {{ form_widget(form.type) }}
        </div>

        <div>
            {{ form_label(form.etoiles) }}
            {{ form_errors(form.etoiles) }}
            {{ form_widget(form.etoiles) }}
        </div>

        <div>
            {{ form_label(form.prix) }}
            {{ form_errors(form.prix) }}
            {{ form_widget(form.prix) }}
        </div>

        <div>
            {{ form_label(form.image) }}
            {{ form_errors(form.image) }}
            {{ form_widget(form.image) }}
        </div>

        <div>
            {{ form_label(form.description) }}
            {{ form_errors(form.description) }}
            {{ form_widget(form.description) }}
        </div>
        <button type="submit" class="btn btn-primary btn-md">Ajouter</button>
    {{ form_end(form) }}

{% endblock %}
