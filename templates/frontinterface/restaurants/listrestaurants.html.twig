{% extends 'basemain.html.twig'%}

{% block title %}
Nos restaurants
{% endblock %}

{% block body %}
<div class="container mt-4">
      {% for restaurant in restaurants %}
          <div class="row mt-2">
              <div class="col-sm-5">
                  <img src="{{ asset('uploads/images/restaurants/' ~ restaurant.image) }}" alt="{{restaurant.libelle }}" class="img-fluid" />
              </div>
              <div class="col">
                  <a href="{{ path('front_restaurant_info',{'name': restaurant.libelle }) }}">
                      <h3>{{ restaurant.libelle }}</h3>
                      <p>Type : {{ restaurant.type }}</p>
                      {% if restaurant.vege == 1 %}
                          <p class="text-success">Option végétarienne disponible</p>
                      {% endif %}
                 </a>
              </div>
          </div>
    {% endfor %}
</div>
{% endblock %}
